<?xml version="1.0" encoding="UTF-8"?>
<portlet-app version="1.0" xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">
  <portlet>
    <description xml:lang="EN">Mail Portlet</description>
    <portlet-name>MailPortlet</portlet-name>
    <display-name xml:lang="EN">Mail Portlet</display-name>
    <portlet-class>org.exoplatform.webui.application.portlet.PortletApplicationController</portlet-class>    
    
    <init-param>
      <name>webui.configuration</name>
      <value>/WEB-INF/conf/portlet/mail/MailPortlet/webui/configuration.xml</value>
    </init-param>    

    <expiration-cache>0</expiration-cache>
    <supports>
      <mime-type>text/html</mime-type>
      <portlet-mode>help</portlet-mode>
    </supports>
    <supported-locale>en</supported-locale>
    <resource-bundle>locale.portlet.mail.MailPortlet</resource-bundle>
    <portlet-info>
      <title>Mail Portlet</title>
      <short-title>Mail Portlet</short-title>
      <keywords>collaboration</keywords>
    </portlet-info>
    
    <portlet-preferences>
      <preference>
        <name>uploadFileSizeLimitMB</name>
        <value>10</value>
        <read-only>false</read-only>
      </preference>
    </portlet-preferences>
    
  </portlet>  
</portlet-app>

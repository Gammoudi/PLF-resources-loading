<portlet-app version="1.0"
   xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">
   <portlet>
      <description xml:lang="EN">User Toolbar Desktop Portlet</description>
      <portlet-name>UserToolbarDesktopPortlet</portlet-name>
      <display-name xml:lang="EN">User Toolbar Desktop Portlet</display-name>
      <portlet-class>org.exoplatform.webui.application.portlet.PortletApplicationController</portlet-class>

      <init-param>
         <name>webui.configuration</name>
         <value>/WEB-INF/conf/portlet/exoadmin/UserToolbarDesktopPortlet/webui/configuration.xml</value>
      </init-param>

      <expiration-cache>0</expiration-cache>
      <supports>
         <mime-type>text/html</mime-type>
         <portlet-mode>help</portlet-mode>
      </supports>
      <supported-locale>en</supported-locale>
      <portlet-info>
         <title>User Toolbar Desktop Portlet</title>
         <short-title>UserToolbarDesktopSite</short-title>
         <keywords>gatein_internal</keywords>
      </portlet-info>

      <security-role-ref>
         <role-name>admin</role-name>
         <role-link>admin</role-link>
      </security-role-ref>

      <supported-processing-event>
         <name>NavigationChange</name>
      </supported-processing-event>
   </portlet>

   <portlet>
      <description xml:lang="EN">WebOS Administration Toolbar Portlet</description>
      <portlet-name>WebOSAdminToolbarPortlet</portlet-name>
      <display-name xml:lang="EN">WebOS Administration Toolbar Portlet</display-name>
      <portlet-class>org.exoplatform.webui.application.portlet.PortletApplicationController</portlet-class>

      <init-param>
         <name>webui.configuration</name>
         <value>/WEB-INF/conf/portlet/exoadmin/WebOSAdminToolbarPortlet/webui/configuration.xml</value>
      </init-param>

      <expiration-cache>0</expiration-cache>
      <supports>
         <mime-type>text/html</mime-type>
         <portlet-mode>help</portlet-mode>
      </supports>
      <supported-locale>en</supported-locale>
      <resource-bundle>locale.portlet.webosadmin.WebOSAdminToolbarPortlet</resource-bundle>
      <portlet-info>
         <title>WebOS Administration Toolbar Portlet</title>
         <short-title>WebOS Administration Toolbar</short-title>
         <keywords>gatein_internal</keywords>
      </portlet-info>
   </portlet>

   <portlet>
      <description xml:lang="EN">WebOS Tabbed Dashboard Portlet</description>
      <portlet-name>WebOSTabbedDashboardPortlet</portlet-name>
      <display-name xml:lang="EN">WebOS Tabbed Dashboard</display-name>
      <portlet-class>org.exoplatform.webui.application.portlet.PortletApplicationController</portlet-class>

      <init-param>
        <name>webui.configuration</name>
        <value>/WEB-INF/conf/portlet/dashboard/WebOSTabbedDashboardPortlet/webui/configuration.xml</value>
      </init-param>
      <supports>
        <mime-type>text/html</mime-type>
        <portlet-mode>help</portlet-mode>
      </supports>
      <supported-locale>en</supported-locale>
      <resource-bundle>locale.portlet.dashboard.WebOSTabbedDashboardPortlet</resource-bundle>
      <portlet-info>
        <title>WebOS Tabbed Dashboard Portlet</title>
        <short-title>WebOS Tabbed Dashboard</short-title>
        <keywords>System</keywords>
      </portlet-info>
  </portlet>
   <event-definition>
      <name>NavigationChange</name>
   </event-definition>
</portlet-app>
